{
    "name": "Y Commentator",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Displays Hacker News comments for the current web page.",
    "icons": {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "page_action": {
        "default_icon": "icon/icon_19.png",
        "default_title": "View Hacker News comments"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "http://api.thriftdb.com/api.hnsearch.com/",
        "http://news.ycombinator.com/"
    ]
}
